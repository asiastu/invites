<div class="form-container container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
      <h1>Profile</h1>
      <%= simple_form_for @attendee do |t| %>
        <%= t.input :first_name, class: "form-control" %>
        <%= t.input :last_name, class: "form-control" %>
        <%= t.input :food_choice, :collection => %w[beef chicken vegetarian]%>
        <%= t.input :comments, class: "form-control" %>
        <%= t.input :housing_cost, :collection => %w[cheap/chips gainfully/employed high/roller]%>
        <%= t.input :days_attending, label: "Anticipated Arrival", :collection => %w[Friday-7/1 Saturday-7/2 Sunday-7/3] %>
        <%= t.submit class: "btn btn-primary btn-submit" %>
      <% end %>
    </div>
        <%= link_to :back do %>
          <i class="fas fa-arrow-left profile-back", title="back"></i>

        <% end %>
  </div>
</div>
